/* pages/history/history.wxss */

page {
  background-image: url(http://wkjsq.carbonstop.net/static/bj/historyback.png);
}

.back {
  width: 98%;
  height: 90rpx;
  /* background: blue; */
  margin: 20rpx auto;
  display: flex;
  align-items: center;
}

.backbtn {
  width: 90rpx;
  height: 90rpx;
  /* background: red; */
  border-radius: 50%;
  margin-left: 23rpx;
  background-image: url("http://wkjsq.carbonstop.net/static/icon/last.png");
  background-size: contain;
  margin-top: 93rpx;
}

.none {
  height: 50vh;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 37rpx;
  font-weight: 600;
  color: gray;
  height: 100%;
}

.main {
  width: 91%;
  background: white;
  height: auto;
  margin: 60rpx auto;
  padding-bottom: 35rpx;
}

.title {
  width: 100%;
  height: 104rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.titleimg {
  width: 26%;
  height: 49%;
  /* background: blue; */
}

.titleimg:nth-of-type(1) {
  background-image: url('http://wkjsq.carbonstop.net/static/img/vankelogoda.png');
  background-size: contain;
  background-repeat: no-repeat;
}

.titleimg:nth-of-type(2) {
  background-image: url('http://wkjsq.carbonstop.net/static/img/carbonstoplogoda.png');
  background-size: contain;
  background-repeat: no-repeat;
}

.history {
  text-align: center;
  font-size: 49rpx;
  font-weight: 700;
  margin: 10rpx auto;
}

.history-table-wrap {
  width: 92%;
  height: auto;
  top: 70rpx;
  overflow-y: scroll;
  overflow-x: hidden;
  margin: 0rpx auto;
}

/* 表格代码   */

.table {
  border: 1px solid #dadada;
  border-right: 0;
  border-bottom: 0;
  width: 98%;
  margin-left: 1%;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.th, .td {
  padding: 10px;
  border-bottom: 1px solid rgba(4, 121, 167, 0.63);
  border-right: 1px solid rgba(4, 121, 167, 0.63);
  text-align: center;
  width: 100%;
}

.th1, .th2, .td1, .td2 {
  width: 100%;
}

.th {
  font-weight: 800;
  background-color: #144b9e;
  font-size: 27rpx;
  color: white;
}

.td {
  font-size: 20rpx;
  color: black;
  overflow: scroll;
}

.login {
  width: 90%;
  text-align: right;
  margin: 21rpx auto;
  font-size: 24rpx;
  font-weight: 700;
}

/* 选项卡 */

.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #eee;
  text-align: center;
  line-height: 80rpx;
  background: #fff;
  font-size: 14px;
}

.on {
  color: #dd2727;
  border-bottom: 5rpx solid #dd2727;
}

.swiper-tab-list {
  font-size: 29rpx;
  display: inline-block;
  width: 49.5%;
  color: #333;
}

.swiper-box {
height:100vh;
overflow-y:scroll;
}


.more {
  text-align: center;
  padding: 22px;
  font-size: 13px;
}

swiper-item {
  padding-top: 15px;
}
